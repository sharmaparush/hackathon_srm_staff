
<link rel="stylesheet" href="/css/signin.css">

<div id="login-box">
  <div class="left">
    <h1 id='status'>Sign Up</h1>
    <form action="/users/create" method="post">
    <input type="text" id="username" name="name" placeholder="username" />
    <input type="text" id="email" name="email" placeholder="E-mail" />
    <input type="password" id="password" name="password" placeholder="Password" />
    <input type="password" id="cpassword" name="confirm_password" placeholder="confirm password">
    <input type="submit" id='signUp' name="sign up" value="Sign Up" />
</form>
  </div>
  
  <div class="right">
    <span class="loginwith">Sign in with</span>
    
    <button class="social-signin facebook">Sign in with facebook</button>
    <button class="social-signin twitter">Sign in with Twitter</button>
    <button class="social-signin google" id="login">Sign in with Google+</button>
  </div>
  <div class="or">OR</div>
</div>

